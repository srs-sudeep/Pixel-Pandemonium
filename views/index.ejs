<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Personal Finance Tracker</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <header>
      <h1>Personal Finance Tracker</h1>
    </header>
    <main>
      <div class="balance">
        <h2>Balance</h2>
        <h3>$<%= balance %></h3>
      </div>
      <div class="transactions">
        <h2>Transactions</h2>
        <table>
          <thead>
            <tr>
              <th>Description</th>
              <th>Amount</th>
              <th>Category</th>
              <th>Date</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% transactions.forEach((transaction) => { %>
              <tr>
                <td><%= transaction.description %></td>
                <td><%= transaction.amount %></td>
                <td><%= transaction.category %></td>
                <td><%= transaction.date %></td>
                <td>
                  <form action="/transactions/<%= transaction.id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete">
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <div class="add-transaction">
        <h2>Add a Transaction</h2>
        <form action="/transactions" method="POST">
          <label for="description">Description</label>
          <input type="text" id="description" name="description" required>
          <label for="amount">Amount</label>
          <input type="number" id="amount" name="amount" required>
          <label for="category">Category</label>
          <select id="category" name="category">
            <option
              value="income"
              <% if (category === 'income
              ') { %> selected <% } %>
            >Income</option>
            <option
              value="housing"
              <% if (category === 'housing
              ') { %> selected <% } %>
            >Housing</option>
            <option
              value="transportation"
              <% if (category === 'transportation
              ') { %> selected <% } %>
            >Transportation</option>
            <option
              value="food"
              <% if (category === 'food
              ') { %> selected <% } %>
            >Food</option>
            <option
              value="utilities"
              <% if (category === 'utilities
              ') { %> selected <% } %>
            >Utilities</option>
            <option
              value="clothing"
              <% if (category === 'clothing
              ') { %> selected <% } %>
            >Clothing</option>
            <option
              value="medical"
              <% if (category === 'medical
              ') { %> selected <% } %>
            >Medical</option>
            <option
              value="insurance"
              <% if (category === 'insurance
              ') { %> selected <% } %>
            >Insurance</option>
            <option
              value="household"
              <% if (category === 'household
              ') { %> selected <% } %>
            >Household</option>
            <option
              value="personal"
              <% if (category === 'personal
              ') { %> selected <% } %>
            >Personal</option>
            <option
              value="debt"
              <% if (category === 'debt
              ') { %> selected <% } %>
            >Debt</option>
            <option
              value="retirement"
              <% if (category === 'retirement
              ') { %> selected <% } %>
            >Retirement</option>
            <option
              value="education"
              <% if (category === 'education
              ') { %> selected <% } %>
            >Education</option>
            <option
              value="savings"
              <% if (category === 'savings
              ') { %> selected <% } %>
            >Savings</option>
            <option
              value="giving"
              <% if (category === 'giving
              ') { %> selected <% } %>
            >Giving</option>
            <option
              value="fun"
              <% if (category === 'fun
              ') { %> selected <% } %>
            >Fun</option>
          </select>
          <label for="date">Date</label>
          <input type="date" id="date" name="date" required>
          <input type="submit" value="Add Transaction">
        </form>
      </div>
    </main>
  </body>
</html>